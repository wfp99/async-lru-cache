{
	"compilerOptions": {
		"target": "es2016",
		"lib": [
			"es2016"
		],
		"types": [
			"node"
		],
		"module": "commonjs",
		"rootDir": "./src",
		"moduleResolution": "node",
		"declaration": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}